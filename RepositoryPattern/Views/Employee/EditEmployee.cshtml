@model RepositoryPattern.Models.Employee

@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditEmployee</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="EID" class="form-control" type="hidden" readonly />
            <div class="form-group">
                <label asp-for="EName" class="control-label">Employee Name</label>
                <input asp-for="EName" class="form-control" />
                <span asp-validation-for="EName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EGender" class="control-label">Gender</label>
                <input asp-for="EGender" class="form-control" />
                <span asp-validation-for="EGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ESalary" class="control-label">Salary</label>
                <input asp-for="ESalary" class="form-control" />
                <span asp-validation-for="ESalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EDept" class="control-label">Department</label>
                <input asp-for="EDept" class="form-control" />
                <span asp-validation-for="EDept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
